<div class="container">
  <form method="POST" action="/register">
    <div class="form-group">
      <label for="exampleInput1">Email address</label>
      <input type="email" class="form-control" id="exampleInputEmail1" rows="1" aria-describedby="emailHelp" placeholder="Enter email" name="email" value="<%= email %>">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label>Username</label>
      <input class="form-control" id="exampleInputUsername" rows="1" placeholder="Enter Username" name="username">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
      <label for="exampleInputPassword1">Confirm Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password_cf">
      <small id="emailHelp" class="form-text text-danger" name="alert_msg"><%= alert_msg %></small>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>